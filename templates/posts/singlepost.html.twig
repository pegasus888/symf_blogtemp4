{% extends "./base.html.twig" %}

{% block title %}
    Blog | Article
{% endblock %}

{% block body %}
    <div class="sm:w-3/5 w-4/5 mx-auto">
        <h1 class="pt-20 sm:text-5xl md:text-7xl text-4xl font-bold text-center">
            {{ post.title }}
        </h1>

        <div class="py-10 text-center">
            <div class="inline-block sm:pt-1">
                <h2 class="font-bold">
                    Created by:
                </h2>

                <p class="text-sm text-gray-600">
                    28-10-2024
                </p>
            </div>
        </div>

        <img
                src="{{ post.image }}"
                class="rounded-xl w-full shadow-xl"
                alt="Icon"
        />

        <p class="text-xl py-6">
            {{ post.content }}
        </p>

        <a
                href="/posts/edit/{{ post.id }}"
                class="bg-green-700 font-bold py-2 px-4 rounded transition-all hover:bg-green-600">
            Edit Post
        </a>

        <a
                href="/posts/delete/{{ post.id }}"
                class="bg-red-700 font-bold py-2 px-4 ml-6 rounded transition-all hover:bg-red-500">
            Delete Post
        </a>
    </div>
{% endblock %}