{% extends "./base.html.twig" %}

{% block title %}
    Blog | Articles
{% endblock %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                Latest Posts
            </h1>
            <p class="hidden">({{ posts|length }})</p>

        </div>
    </div>

    {# Create btn & show when logged in #}
    {% if app.user %}
            <div class="mx-auto w-4/5 my-8">
            <a
                    href="/posts/create"
                    class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800">
                Create New Post
            </a>
        </div>
    {% endif %}

    {# Post #}
    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 ">
        <!-- Review Item -->
        {% for post in posts %}
            <div class="text-center pt-8 pb-4">
                <img
                        src="{{ asset(post.image) }}"
                        alt=""
                        class="shadow-xl rounded-md"
                />

                <h2 class="text-gray-700 font-bold text-3xl py-2">
                    {{ post.title }}
                </h2>


                <span class="font-light text-gray-500 italic">
                Created by  {{ post.user.username }}
{#                Created by  {{ post.user.email }}#}
                </span>


                <p class="text-base text-gray-700 pt-4 pb-10 leading-8 font-light">
                    {{ post.content }}
                </p>

                <a href="/posts/{{ post.id }}" class="uppercase border border-gray-500 text-gray-600 text-lg py-4 px-12 rounded transition transition-all hover:bg-gray-800 hover:text-white">
                    Keep Reading
                </a>
            </div>
        {% endfor %}
    </div>


    {#    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 ">#}
    {#    </div>#}

{% endblock %}
